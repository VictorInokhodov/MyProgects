
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Save</title>
</head>
<body>
    <div> 
        <h3>Reward page</h3>
        <form method="post">
            <input type="hidden" value="@ViewBag.Reward.ID" name="ID" />
            <table>
                <tr>
                    <td>Title: </td>
                    <td><input type="text" value="@ViewBag.Reward.Title" name="Title" /></td>
                </tr>
                <tr>
                    <td>Description: </td>
                    <td><input type="text" value="@ViewBag.Reward.Description" name="Description" /></td>
                </tr>
            </table>
            <input type="submit" value="OK" />
        </form>
    </div>
</body>
</html>
